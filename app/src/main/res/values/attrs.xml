<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedCornerImageView">
        <attr name="cornerRadius" format="dimension"/>
        <attr name="roundedColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RoundedProfileImageView">
        <attr name="strokeColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircularProgressBar">
        <attr name="progressColor" format="color"/>
        <attr name="outerColor" format="color"/>
        <attr name="innerColor" format="color"/>
        <attr name="progressText" format="integer"/>
    </declare-styleable>

    <declare-styleable name="LineProgressBar">
        <attr name="outerProgressColor" format="color"/>
        <attr name="innerProgressColor" format="color"/>
        <attr name="progress" format="integer"/>
    </declare-styleable>
</resources>